{
  "editor.detectIndentation": false,
  "files.eol": "\n",
  "files.readonlyInclude": {
    "LICENSE": true,
    "node_modules/**": true
  },
  "search.exclude": {
    "**/*.code-search": false,
    "**/bower_components": false,
    "**/node_modules": true,
    "LICENSE": true,
    "package.json": true,
    "package-lock.json": true
  },
  "[json][markdown][yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
  }
}
  